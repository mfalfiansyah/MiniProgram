<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UTS_ALGORITMA" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/colorline</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.UTS_ALGORITMA.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UTS_ALGORITMA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UTS_ALGORITMA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- Customize your theme here. -->
    <!--    <style name="SheetDialog"-->
    <!--        parent="BottomSheetDialog">-->
    <!--    </style>-->

</resources>